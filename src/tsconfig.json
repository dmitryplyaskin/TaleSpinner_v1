{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "../dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": ["*", "*.js", "*.ts"],
      "@shared/*": ["./src/shared/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["../node_modules", "../dist"]
} 